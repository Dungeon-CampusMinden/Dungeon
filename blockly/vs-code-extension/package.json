{
  "name": "blockly-code-runner",
  "displayName": "Blockly-Code-Runner",
  "description": "",
  "author": {
    "name": "Flamtky",
    "url": "https://github.com/Flamtky"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/Dungeon-CampusMinden/Dungeon"
  },
  "publisher": "Flamtky",
  "icon": "images/logo.png",
  "version": "1.0.2",
  "engines": {
    "vscode": "^1.97.0"
  },
  "categories": [
    "Programming Languages",
    "Other"
  ],
  "activationEvents": [
    "onLanguage:java"
  ],
  "main": "./out/extension.js",
  "contributes": {
    "commands": [
      {
        "command": "blockly-code-runner.sendBlocklyFile",
        "title": "Run Blockly-Code",
        "category": "Blockly",
        "icon": "$(play)"
      },
      {
        "command": "blockly-code-runner.stopBlocklyExecution",
        "title": "Stop Blockly-Code",
        "category": "Blockly",
        "icon": "$(debug-stop)"
      }
    ],
    "configuration": {
      "type": "object",
      "title": "Blockly-Code-Runner",
      "properties": {
        "blocklyServer.url": {
          "type": "string",
          "default": "http://localhost:8080",
          "description": "Server-URL für Blockly"
        },
        "blocklyServer.sleepAfterEachLine": {
          "type": "integer",
          "default": 500,
          "description": "Zeit in Millisekunden, die nach jeder Zeile gewartet wird, um die Ausführung zu verlangsamen. Setze auf 0, um keine Verzögerung zu haben.",
          "minimum": 0,
          "maximum": 10000
        }
      }
    },
    "menus": {
      "editor/title": [
        {
          "command": "blockly-code-runner.sendBlocklyFile",
          "group": "navigation",
          "when": "resourceExtname == .java"
        },
        {
          "command": "blockly-code-runner.stopBlocklyExecution",
          "group": "navigation",
          "when": "resourceExtname == .java"
        }
      ]
    }
  },
  "scripts": {
    "vscode:prepublish": "npm run compile",
    "compile": "tsc -p ./",
    "watch": "tsc -watch -p ./",
    "pretest": "npm run compile && npm run lint",
    "lint": "eslint .",
    "lint:fix": "eslint . --fix",
    "test": "vscode-test"
  },
  "devDependencies": {
    "@types/mocha": "^10.0.10",
    "@types/node": "20.x",
    "@types/vscode": "^1.97.0",
    "@typescript-eslint/eslint-plugin": "^8.25.0",
    "@typescript-eslint/parser": "^8.25.0",
    "@vscode/test-cli": "^0.0.10",
    "@vscode/test-electron": "^2.4.1",
    "eslint": "^9.22.0",
    "typescript-eslint": "^8.26.0",
    "typescript": "^5.7.3"
  },
  "dependencies": {
    "axios": "^1.12.0"
  }
}
