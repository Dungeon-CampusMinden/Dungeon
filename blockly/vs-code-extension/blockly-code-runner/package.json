{
  "name": "blockly-code-runner",
  "displayName": "Blockly-Code-Runner",
  "description": "",
  "author": {
    "name": "Flamtky"
  },
  "version": "0.0.1",
  "engines": {
    "vscode": "^1.97.0"
  },
  "categories": [
    "Other"
  ],
  "activationEvents": [
    "onLanguage:java"
  ],
  "main": "./out/extension.js",
  "contributes": {
    "commands": [
      {
        "command": "blockly-code-runner.sendBlocklyFile",
        "title": "Run Blockly-Code",
        "category": "Blockly",
        "icon": "$(play)"
      }
    ],
    "configuration": {
        "type": "object",
        "title": "Blockly-Code-Runner",
        "properties": {
            "blocklyServer.url": {
                "type": "string",
                "default": "http://localhost:8080",
                "description": "Server-URL f√ºr Blockly"
            }
        }
    },
    "menus": {
      "editor/title": [
          {
              "command": "blockly-code-runner.sendBlocklyFile",
              "group": "navigation",
              "when": "resourceExtname == .java"
          }
      ]
    }
  },
  "scripts": {
    "vscode:prepublish": "npm run compile",
    "compile": "tsc -p ./",
    "watch": "tsc -watch -p ./",
    "pretest": "npm run compile && npm run lint",
    "lint": "eslint src",
    "test": "vscode-test"
  },
  "devDependencies": {
    "@types/vscode": "^1.97.0",
    "@types/mocha": "^10.0.10",
    "@types/node": "20.x",
    "@typescript-eslint/eslint-plugin": "^8.25.0",
    "@typescript-eslint/parser": "^8.25.0",
    "eslint": "^9.21.0",
    "typescript": "^5.7.3",
    "@vscode/test-cli": "^0.0.10",
    "@vscode/test-electron": "^2.4.1"
  }
}
